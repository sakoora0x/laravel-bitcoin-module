{
    "name": "sakoora0x/laravel-bitcoin-module",
    "description": "Laravel Bitcoin Module",
    "homepage": "https://github.com/sakoora0x/laravel-bitcoin-module",
    "license": "MIT",
    "authors": [
        {
            "name": "sakoora0x",
            "email": "sakoora0x@gmail.com"
        },
        {
            "name": "MollSoft",
            "email": "info@mollsoft.com"
        }
    ],
    "keywords": [
        "sakoora0x",
        "laravel",
        "bitcoin"
    ],
    "require": {
        "php": "^8.2",
        "brick/math": "*",
        "guzzlehttp/guzzle": "^7.2",
        "illuminate/contracts": "^11.0|^12.0",
        "spatie/laravel-package-tools": "^1.16"
    },
    "suggest": {
        "ext-decimal": "For better performance with decimal calculations",
        "ext-bcmath": "Required for arbitrary precision mathematics (usually enabled by default)",
        "ext-gmp": "For better performance with large number calculations (usually enabled by default)"
    },
    "require-dev": {
        "orchestra/testbench": "^10.0",
        "phpunit/phpunit": "^12.0",
        "mockery/mockery": "^1.5",
        "fakerphp/faker": "^1.21"
    },
    "autoload": {
        "psr-4": {
            "sakoora0x\\LaravelBitcoinModule\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "sakoora0x\\LaravelBitcoinModule\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "sakoora0x\\LaravelBitcoinModule\\BitcoinServiceProvider"
            ],
            "aliases": {
                "Bitcoin": "sakoora0x\\LaravelBitcoinModule\\Facades\\Bitcoin"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    }
}
